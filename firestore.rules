rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if notification belongs to user
    function isNotificationOwner() {
      return isAuthenticated() && 
        notificationId.matches('^' + request.auth.uid + '_.*');
    }

    // Rules for user documents
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Rules for goals subcollection
      match /goals/{goalId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Rules for notifications collection
    match /notifications/{notificationId} {
      allow read, write: if isNotificationOwner();
    }
  }
} 